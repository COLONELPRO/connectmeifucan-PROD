# ========================
# CLOUDFLARE CONFIGURATION
# ========================

# Cloudflare API Token (avec permissions Workers et Pages)
# Obtenir sur: https://dash.cloudflare.com/profile/api-tokens
CLOUDFLARE_API_TOKEN=your_api_token_here

# Cloudflare Account ID
# Trouver sur: https://dash.cloudflare.com/ (dans la barre latérale)
CLOUDFLARE_ACCOUNT_ID=your_account_id_here

# ========================
# BACKEND CONFIGURATION
# ========================

# Environment
NODE_ENV=development

# Backend API URL (selon l'environnement)
# Development: https://dev-api.connectmeifucan.com
# Production: https://api.connectmeifucan.com
API_URL=https://dev-api.connectmeifucan.com

# WebSocket URL
WS_URL=wss://dev-api.connectmeifucan.com

# ========================
# CLOUDFLARE KV NAMESPACES
# ========================

# KV Namespace IDs (créer dans Cloudflare Dashboard)
# Development
KV_NAMESPACE_DEV=your_dev_kv_namespace_id

# Production
KV_NAMESPACE_PROD=your_prod_kv_namespace_id

# ========================
# SECURITY
# ========================

# JWT Secret pour authentification
JWT_SECRET=your_jwt_secret_here

# CORS Allowed Origins (comma-separated)
CORS_ORIGINS=https://connectmeifucan.com,https://dev.connectmeifucan.com

# ========================
# FEATURES FLAGS
# ========================

# Enable/Disable features
FEATURE_ANDROID_TV=true
FEATURE_ANALYTICS=true
FEATURE_DEBUG_MODE=false

# ========================
# RATE LIMITING
# ========================

# Requests per minute
RATE_LIMIT_RPM=100

# ========================
# MONITORING
# ========================

# Sentry DSN (optional)
SENTRY_DSN=

# Analytics ID (optional)
ANALYTICS_ID=
