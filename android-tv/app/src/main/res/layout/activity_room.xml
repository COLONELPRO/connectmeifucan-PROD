<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg"
    android:padding="60dp"
    android:gravity="center">

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:textSize="36sp"
        android:textColor="@color/textPrimary"
        android:layout_marginBottom="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room Management"
        android:textSize="28sp"
        android:textColor="@color/accent"
        android:layout_marginBottom="30dp" />

    <EditText
        android:id="@+id/room_id_input"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:hint="Enter 4-letter Room ID"
        android:textSize="24sp"
        android:textColor="@color/textPrimary"
        android:textColorHint="@color/textMuted"
        android:background="@color/surfaceLow"
        android:padding="20dp"
        android:gravity="center"
        android:inputType="textCapCharacters"
        android:maxLength="4"
        android:layout_marginBottom="30dp"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <Button
        android:id="@+id/create_room_btn"
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:text="CREATE ROOM"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:background="@color/accent"
        android:layout_marginBottom="20dp"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <Button
        android:id="@+id/join_room_btn"
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:text="JOIN ROOM"
        android:textSize="22sp"
        android:textColor="@color/textPrimary"
        android:background="@color/surface"
        android:layout_marginBottom="20dp"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <TextView
        android:id="@+id/status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading..."
        android:textSize="20sp"
        android:textColor="@color/accent"
        android:layout_marginTop="20dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/logout_btn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="LOGOUT"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:background="@color/danger"
        android:layout_marginTop="40dp"
        android:focusable="true"
        android:focusableInTouchMode="true" />

</LinearLayout>
